<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_detail"
    android:orientation="vertical"
    android:paddingTop="100dp"
    android:paddingBottom="20dp"
    tools:context=".ui.activity.Activity_friend1_detail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_lv_bg"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingBottom="20dp"
                android:gravity="left">

                <TextView
                    android:id="@+id/titletxt1"
                    style="@style/MyTxtSitting"
                    android:background="@drawable/title_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="6dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="7dp"
                    android:text="@string/baseInfomation" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avater_friend1"
                    android:layout_below="@id/titletxt1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/avater1"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#ce7a4c" />

                <TextView
                    android:id="@+id/name_freind1"
                    android:layout_below="@id/avater_friend1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/toptext"
                    android:textStyle="bold"
                    android:text="@string/zhuGeLiang"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_below="@id/name_freind1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dip"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:textColor="@color/toptext"
                        android:textStyle="bold"
                        android:text="@string/live_adrress"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/edt_act_detail"
                        android:layout_width="fill_parent"
                        android:layout_height="23dp"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:textColor="@color/white"
                        android:background="@drawable/camp_login_input_bg"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="10dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="@string/zhejianghangzhou" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear2"
                    android:layout_below="@id/linear1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dip"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:textColor="@color/toptext"
                        android:textStyle="bold"
                        android:text="@string/sex"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/edt_act_detai2"
                        android:layout_width="fill_parent"
                        android:layout_height="23dp"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:textColor="@color/white"
                        android:background="@drawable/camp_login_input_bg"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="10dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="@string/male" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear3"
                    android:layout_below="@id/linear2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dip"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:textColor="@color/toptext"
                        android:textStyle="bold"
                        android:text="@string/age"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/edt_act_detai3"
                        android:layout_width="fill_parent"
                        android:layout_height="23dp"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:textColor="@color/white"
                        android:background="@drawable/camp_login_input_bg"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="10dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="@string/age_number" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear4"
                    android:layout_below="@id/linear3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dip"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:textColor="@color/toptext"
                        android:textStyle="bold"
                        android:text="@string/birthday"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/edt_act_detai4"
                        android:layout_width="fill_parent"
                        android:layout_height="23dp"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:textColor="@color/white"
                        android:background="@drawable/camp_login_input_bg"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="10dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="@string/zhejianghangzhou" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear5"
                    android:layout_below="@id/linear4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dip"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:textColor="@color/toptext"
                        android:textStyle="bold"
                        android:text="@string/personal_introduction"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/edt_act_detai5"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:textColor="@color/white"
                        android:background="@drawable/camp_login_input_bg"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="10dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="喜爱冒险" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_lv_bg"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingBottom="20dp"
                android:gravity="left">

                <TextView
                    android:id="@+id/titletxt2"
                    style="@style/MyTxtSitting"
                    android:background="@drawable/title_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="6dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="7dp"
                    android:text="游戏数据" />

                <LinearLayout
                    android:id="@+id/linear6"
                    android:layout_below="@id/titletxt2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dip"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:textColor="@color/toptext"
                        android:textStyle="bold"
                        android:text="@string/power"
                        android:textSize="12sp" />

                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:max="100"
                        android:progress="50"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/progressbar1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear7"
                    android:layout_below="@id/linear6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dip"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:textColor="@color/toptext"
                        android:textStyle="bold"
                        android:text="@string/brain"
                        android:textSize="12sp" />

                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:max="100"
                        android:progress="50"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/progressbar2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear8"
                    android:layout_below="@id/linear7"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dip"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:textColor="@color/toptext"
                        android:textStyle="bold"
                        android:text="@string/cooperation"
                        android:textSize="12sp" />

                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:max="100"
                        android:progress="50"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/progressbar3" />
                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/input_lv_bg"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游戏邀请" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发消息" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>
