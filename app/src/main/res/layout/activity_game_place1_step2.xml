<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/totalbg"
    tools:context=".ui.activity.ActivityGame_place1_step2">

    <ImageView
        android:id="@+id/texiao"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/texiao"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/fangxiang"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_below="@id/texiao"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/place1_step2_linea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_message_left"
            android:orientation="horizontal"
            android:layout_margin="30dp"
            android:paddingRight="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="恭喜您获得一瓶" />

            <TextView
                android:id="@+id/result_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f22c2c"
                android:textSize="14sp" />
        </LinearLayout>


        <ImageView
            android:layout_below="@id/place1_step2_linea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/map_avater" />
    </RelativeLayout>


    <Button
        android:id="@+id/place1_step2_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:layout_centerHorizontal="true"
        android:text="返回地图" />
</RelativeLayout>
