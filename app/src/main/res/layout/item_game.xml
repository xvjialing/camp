<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginBottom="2dp"
    android:background="@drawable/listview_bg"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="50dp"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintVertical_bias="1.0" />


    <TextView
        android:id="@+id/tv_title"
        style="@style/MyTxtStyle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/tv_price"
        style="@style/MyTxtStyle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_conversion_absoluteX="354dp"
        tools:layout_conversion_absoluteY="15dp"
        tools:layout_conversion_absoluteWidth="0dp"
        tools:layout_conversion_absoluteHeight="13dp"
        android:layout_marginRight="45dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <!--android:text="价格：￥300"-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="类型："
        android:textColor="@color/toptext"
        tools:layout_conversion_absoluteX="90dp"
        tools:layout_conversion_absoluteY="37dp"
        tools:layout_conversion_absoluteWidth="42dp"
        tools:layout_conversion_absoluteHeight="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="39dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_logo"
        android:layout_marginLeft="14dp"
        android:id="@+id/textView3" />

    <TextView
        android:id="@+id/tv_gametype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        tools:layout_conversion_absoluteX="130dp"
        tools:layout_conversion_absoluteY="37dp"
        tools:layout_conversion_absoluteWidth="0dp"
        tools:layout_conversion_absoluteHeight="16dp"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        android:layout_marginLeft="7dp"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/btn_describe"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:background="@drawable/btn_xiangqi"
        tools:layout_conversion_absoluteX="274dp"
        tools:layout_conversion_absoluteY="37dp"
        tools:layout_conversion_absoluteWidth="90dp"
        tools:layout_conversion_absoluteHeight="28dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginRight="18dp"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>