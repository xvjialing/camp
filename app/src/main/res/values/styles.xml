<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#be6d38</item>
        <item name="colorAccent">#be6d38</item>

        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">#be6d38</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="MyTxtStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/toptext</item>
    </style>

    <!-- 底部菜单样式 -->
    <style name="main_tab_bottom">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:button">@null</item>
        <item name="android:layout_marginTop">@dimen/bottom_tab_layout_marginTop</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/toptext</item>
    </style>

    <!-- 菜单按钮风格 -->
    <style name="means_button">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:button">@null</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginBottom">6.5dp</item>
        <item name="android:background">@drawable/btn_means</item>
    </style>

    <style name="MyTxtStyle2">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/toptext</item>
    </style>

    <style name="MyTxtStyle3">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyTxtSitting">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#e9cd8c</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="MyTxtSitting2">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/toptext</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="BtnStyle">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="BtnStyle2">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="DialogStyle">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="gameDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AnimationLeftFade">
        <item name="android:windowEnterAnimation">@anim/in_left_to_right</item>
        <item name="android:windowExitAnimation">@anim/out_right_to_left</item>
    </style>

    <style name="AnimationTopFade">
        <item name="android:windowEnterAnimation">@anim/in_top_to_bottom</item>
        <item name="android:windowExitAnimation">@anim/out_bottom_to_top</item>
    </style>


    <style name="dialogWindowAnim" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>

    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/login_checkbox_selector</item>
    </style>
</resources>
