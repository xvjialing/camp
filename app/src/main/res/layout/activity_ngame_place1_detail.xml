<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/rela_ngame_detail"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_game_detail"
    android:orientation="vertical"
    android:paddingTop="100dp"
    android:paddingBottom="20dp"
    tools:context=".ui.activity.ActivityNgame_place1_detail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--游戏名称-->
            <com.example.xvjia.camp3.assetsFile.font.CustomFontTextView2
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/battle_chibi"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp" />

            <!--游戏信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/input_lv_bg"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titletxt8"
                    style="@style/MyTxtSitting"
                    android:background="@drawable/title_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:paddingLeft="6dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="7dp"
                    android:text="游戏信息" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="25dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="难度："
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_rank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4级"
                        android:textColor="@color/red" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="25dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关卡："
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="山地穿越——险象划渡——逃离迷宫"
                        android:textColor="@color/red" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="25dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="限定人数："
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_menber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4/5"
                        android:textColor="@color/red" />
                </LinearLayout>


            </LinearLayout>

            <!--游戏介绍-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingBottom="40dp"
                android:background="@drawable/input_lv_bg">

                <TextView
                    android:id="@+id/titletxt6"
                    style="@style/MyTxtSitting"
                    android:background="@drawable/title_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:paddingLeft="6dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="7dp"
                    android:text="游戏介绍" />


                <TextView
                    android:id="@+id/tv_translate"
                    android:layout_below="@id/titletxt6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/dialog_tv"
                    android:text="@string/gameBackground1"
                    android:textSize="15sp" />

            </RelativeLayout>

            <!--相关部落-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@drawable/input_lv_bg"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/titletxt7"
                    style="@style/MyTxtSitting"
                    android:background="@drawable/title_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:paddingLeft="6dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="7dp"
                    android:text="相关部落" />

                <LinearLayout
                    android:id="@+id/linea_clan1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/clan1"
                            android:layout_marginTop="35dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="93dp"
                            android:layout_marginLeft="15dp"
                            android:text="黑夜 4/5" />
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linea_clan2"
                    android:layout_toRightOf="@id/linea_clan1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/clan2"
                            android:layout_marginTop="35dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="93dp"
                            android:layout_marginLeft="15dp"
                            android:text="随风 8/10" />
                    </RelativeLayout>


                </LinearLayout>


            </RelativeLayout>

            <!--同玩好友-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@drawable/input_lv_bg"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/titletxt9"
                    style="@style/MyTxtSitting"
                    android:background="@drawable/title_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:paddingLeft="6dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="7dp"
                    android:text="同玩好友" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/avater1"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="20dp"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#ce7a4c" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/avater2"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="20dp"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#ce7a4c" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/avater3"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="20dp"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#ce7a4c" />

                </LinearLayout>


            </RelativeLayout>

            <!--营地信息-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/input_lv_bg"
                android:gravity="left"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/titletxt1"
                    style="@style/MyTxtSitting"
                    android:background="@drawable/title_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="6dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="7dp"
                    android:text="营地信息" />

                <LinearLayout
                    android:layout_below="@id/titletxt1"
                    android:id="@+id/linear1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:paddingLeft="15dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:textColor="@color/toptext"
                        android:textStyle="bold"
                        android:text="名称"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/edt_act_name"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="10dp"
                        android:textColor="@color/white"
                        android:background="@drawable/camp_login_input_bg"
                        android:textSize="12sp"
                        android:text="桐庐纪龙山野营地" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear2"
                    android:layout_below="@id/linear1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:textColor="@color/toptext"
                        android:textStyle="bold"
                        android:text="简介"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/edt_act_detail"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:textColor="@color/white"
                        android:background="@drawable/camp_login_input_bg"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="10dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="@string/jilongshan_introduce" />
                </LinearLayout>

                <LinearLayout
                    android:layout_below="@id/linear2"
                    android:id="@+id/linear_1_3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:paddingLeft="15dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:textColor="@color/toptext"
                        android:textStyle="bold"
                        android:text="地点"
                        android:textSize="12sp" />

                    <EditText
                        android:textSize="12sp"
                        android:id="@+id/edt_act_ad"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="23dp"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="10dip"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="10dp"
                        android:textStyle="bold"
                        android:text="桐庐纪龙山"
                        android:textColor="@color/white"
                        android:background="@drawable/camp_login_input_bg" />

                </LinearLayout>

                <LinearLayout
                    android:layout_below="@id/linear_1_3"
                    android:id="@+id/linear_1_4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:paddingLeft="15dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:textColor="@color/toptext"
                        android:textStyle="bold"
                        android:text="营地"
                        android:textSize="12sp" />

                    <EditText
                        android:textSize="12sp"
                        android:id="@+id/edt_act_camp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="23dp"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="10dip"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="10dp"
                        android:textStyle="bold"
                        android:text="卧龙之家"
                        android:textColor="@color/white"
                        android:background="@drawable/camp_login_input_bg" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear3"
                    android:layout_below="@id/linear_1_4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:paddingLeft="15dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:textColor="@color/toptext"
                        android:textStyle="bold"
                        android:text="时间"
                        android:textSize="12sp" />

                    <EditText
                        android:textSize="12sp"
                        android:id="@+id/edt_act_starttime"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="5dip"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:background="@drawable/camp_login_input_bg"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="10dp"
                        android:textStyle="bold"
                        android:text="每周日晚"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:textColor="@color/toptext"
                        android:textStyle="bold"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="5dp"
                        android:maxLines="1"
                        android:gravity="center"
                        android:textColor="@color/toptext"
                        android:textStyle="bold"
                        android:text="时长"
                        android:textSize="12sp" />

                    <EditText
                        android:textSize="12sp"
                        android:id="@+id/edt_act_staytime"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_weight="1"
                        android:background="@drawable/camp_login_input_bg"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="10dp"
                        android:textStyle="bold"
                        android:text="全天"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_1_5"
                    android:layout_below="@id/linear3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:paddingLeft="15dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:textColor="@color/toptext"
                        android:textStyle="bold"
                        android:text="单价"
                        android:textSize="12sp" />

                    <EditText
                        android:textSize="12sp"
                        android:id="@+id/edt_act_value"
                        android:layout_width="70dp"
                        android:layout_height="23dp"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="5dip"
                        android:maxLines="1"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="10dp"
                        android:textStyle="bold"
                        android:text="80"
                        android:background="@drawable/camp_login_input_bg"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:textColor="@color/toptext"
                        android:textStyle="bold"
                        android:text="元每人"
                        android:textSize="12sp" />

                </LinearLayout>
            </RelativeLayout>

            <!--图片展示-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/input_lv_bg"
                android:paddingBottom="15dp">

                <TextView
                    android:id="@+id/titletxt5"
                    style="@style/MyTxtSitting"
                    android:background="@drawable/title_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="6dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="7dp"
                    android:text="图片展示" />

                <LinearLayout
                    android:layout_below="@id/titletxt5"
                    android:id="@+id/linear5"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingLeft="10dip">

                    <ImageView
                        android:id="@+id/iv_place"
                        android:layout_width="350dp"
                        android:layout_height="200dp"
                        android:src="@drawable/place1_detail_img1" />


                </LinearLayout>
            </RelativeLayout>

            <!--报名-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:background="@drawable/input_lv_bg">

                <Button
                    android:id="@+id/btn_xiangqing1"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:background="@drawable/btn_baoming" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
