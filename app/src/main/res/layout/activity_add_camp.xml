<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_add_camp"
    android:paddingTop="90dp"
    android:paddingBottom="20dp"
    tools:context=".ui.activity.ActivityAdd_camp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/input_lv_bg"
                android:gravity="start"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/titletxt1"
                    style="@style/MyTxtSitting"
                    android:background="@drawable/title_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:gravity="start|center_vertical"
                    android:paddingLeft="6dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="7dp"
                    android:text="@string/baseInfomation" />

                <LinearLayout
                    android:layout_below="@id/titletxt1"
                    android:id="@+id/linear1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:paddingLeft="15dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:textColor="@color/toptext"
                        android:textStyle="bold"
                        android:text="@string/mingcheng"
                        android:textSize="12sp" />

                    <EditText
                        android:textSize="12sp"
                        android:id="@+id/edt_add_CampName"
                        android:layout_width="fill_parent"
                        android:layout_height="23dp"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:paddingLeft="4dp"
                        android:inputType="text"
                        android:textColor="@color/white"
                        android:background="@drawable/camp_login_input_bg" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear2"
                    android:layout_below="@id/linear1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:paddingLeft="15dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:textColor="@color/toptext"
                        android:textStyle="bold"
                        android:text="@string/introduction"
                        android:textSize="12sp" />

                    <EditText
                        android:textSize="12sp"
                        android:id="@+id/edt_add_CampDetail"
                        android:layout_width="fill_parent"
                        android:layout_height="23dp"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:paddingLeft="4dp"
                        android:textColor="@color/white"
                        android:inputType="text"
                        android:background="@drawable/camp_login_input_bg" />
                </LinearLayout>

                <LinearLayout
                    android:layout_below="@id/linear2"
                    android:id="@+id/linear_1_3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:paddingLeft="15dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:textColor="@color/toptext"
                        android:textStyle="bold"
                        android:text="@string/adrress"
                        android:textSize="12sp" />

                    <EditText
                        android:textSize="12sp"
                        android:id="@+id/edt_add_Campad"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="23dp"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="10dip"
                        android:paddingLeft="4dp"
                        android:inputType="text"
                        android:textColor="@color/white"
                        android:background="@drawable/camp_login_input_bg" />

                    <Button
                        android:layout_width="15dp"
                        android:layout_height="23dp"
                        android:layout_marginRight="15dip"
                        android:background="@drawable/btn_location" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linear4"
                    android:layout_below="@id/linear_1_3"
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingLeft="15dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/toptext"
                        android:textStyle="bold"
                        android:text="@string/add_pic"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:id="@+id/linerar1"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="15dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:background="@drawable/camp_login_input_bg"
                        android:paddingLeft="4dp"
                        android:textColor="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/pic_camp1"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="2dp"
                            android:layout_height="35dp"
                            android:layout_width="35dp"
                            android:background="@drawable/btn_addpics"
                            android:clickable="true" />

                        <View
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView

                            android:id="@+id/pic_camp2"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_height="35dp"
                            android:layout_width="35dp"
                            android:background="@drawable/btn_addpics"
                            android:clickable="true" />

                        <View
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView

                            android:id="@+id/pic_camp3"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_height="35dp"
                            android:layout_width="35dp"
                            android:background="@drawable/btn_addpics"
                            android:clickable="true" />

                        <View
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView

                            android:id="@+id/pic_camp4"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="10dp"
                            android:layout_height="35dp"
                            android:layout_width="35dp"
                            android:background="@drawable/btn_addpics"
                            android:clickable="true" />
                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/input_lv_bg"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/titletxt5"
                    style="@style/MyTxtSitting"
                    android:background="@drawable/title_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="6dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="7dp"
                    android:text="@string/others" />

                <LinearLayout
                    android:layout_below="@id/titletxt5"
                    android:id="@+id/linear5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:paddingLeft="15dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:textColor="@color/toptext"
                        android:textStyle="bold"
                        android:text="@string/others"
                        android:textSize="12sp" />

                    <EditText
                        android:textSize="12sp"
                        android:id="@+id/edt_add_other"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:paddingLeft="4dp"
                        android:textColor="@color/white"
                        android:background="@drawable/camp_login_input_bg" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/input_lv_bg"
                android:paddingBottom="5dp">

                <Button
                    android:id="@+id/btn_add_queding"
                    style="@style/BtnStyle2"
                    android:background="@drawable/btn_camp_queding"
                    android:layout_alignParentRight="false"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" />

                <Button
                    android:id="@+id/btn_add_cancle"
                    style="@style/BtnStyle2"
                    android:background="@drawable/btn_camp_cancel"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
