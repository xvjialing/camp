<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.xvjia.camp3.ui.fragment.FragmentGame_shop_buy">

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:text="@string/medicament"
                android:textAlignment="center"
                android:textColor="@color/dialog_tv"
                android:background="@drawable/btn_dialog_bg_selector"
                android:button="@null"
                android:checked="true" />

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:text="@string/key"
                android:textAlignment="center"
                android:textColor="@color/dialog_tv"
                android:background="@drawable/btn_dialog_bg_selector"
                android:button="@null" />

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:text="@string/others"
                android:textAlignment="center"
                android:textColor="@color/dialog_tv"
                android:background="@drawable/btn_dialog_bg_selector"
                android:button="@null" />
        </RadioGroup>


    </LinearLayout>

    <ScrollView
        android:layout_width="230dp"
        android:layout_height="match_parent"
        android:paddingTop="22dp"
        android:background="@drawable/bg_shop_buy_list"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/bg_shop_list_item_on">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/game_item1" />

                <com.example.xvjia.camp3.assetsFile.font.CustomFontTextView2
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:textColor="@color/dialog_tv"
                    android:layout_marginTop="3dp"
                    android:text="10点体力药水" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:layout_marginTop="28dp"
                    android:text="X100" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/bg_shop_list_item">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/game_item2" />

                <com.example.xvjia.camp3.assetsFile.font.CustomFontTextView2
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:textColor="@color/dialog_tv"
                    android:layout_marginTop="3dp"
                    android:text="10点智力药水" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:layout_marginTop="28dp"
                    android:text="X200" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/bg_shop_list_item">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/game_item4" />

                <com.example.xvjia.camp3.assetsFile.font.CustomFontTextView2
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:textColor="@color/dialog_tv"
                    android:layout_marginTop="3dp"
                    android:text="10点速度药水" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:layout_marginTop="28dp"
                    android:text="X300" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/bg_shop_list_item"></RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/bg_shop_list_item"></RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/bg_shop_list_item"></RelativeLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
