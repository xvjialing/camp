<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_game"
    tools:context=".ui.activity.ActivityGameShop">

    <RelativeLayout
        android:layout_width="550dp"
        android:layout_height="350dp"
        android:background="@drawable/bg_dialog4"
        android:layout_centerInParent="true">

        <com.example.xvjia.camp3.assetsFile.font.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mall"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="@color/dialog_tv"
            android:textStyle="bold"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/shop_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/btn_dialog1_back" />

        <LinearLayout
            android:id="@+id/shop_rela1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp">

            <Button
                android:id="@+id/btn_gameshop_buy"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="我要购买"
                android:textAlignment="center"
                android:textColor="@color/dialog_tv"
                android:background="@drawable/btn_dialog_bg_selector" />

            <Button
                android:id="@+id/btn_gameshop_sale"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:text="我要出售"
                android:textAlignment="center"
                android:textColor="@color/dialog_tv"
                android:background="@drawable/btn_dialog_bg_selector" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/shop_content"
            android:layout_below="@id/shop_rela1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"></FrameLayout>

    </RelativeLayout>
</RelativeLayout>
